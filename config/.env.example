# ==================================================
# ZALO OA FINANCE WORKFLOW - ENVIRONMENT VARIABLES
# ==================================================

# Secret key for JWT
SECRET_KEY=your-secret-key-change-this

# ===== ZALO OA CREDENTIALS =====

# OA Khách hàng (for customers)
ZALO_OA_KHACH_ID=
ZALO_OA_KHACH_TOKEN=

# OA Nội bộ (for internal staff)  
ZALO_OA_NOIBI_ID=
ZALO_OA_NOIBI_TOKEN=

# ===== GOOGLE WORKSPACE =====

# Google Sheets (for data storage)
GOOGLE_CREDENTIALS_PATH=config/google_credentials.json
GOOGLE_SHEET_NAME=CRM Vay Vốn

# ===== OCR SERVICE =====

# Option 1: Pytesseract (free, local)
TESSERACT_PATH=/usr/bin/tesseract

# Option 2: Google Vision API (free 1000/month)
# Uncomment if using Google Vision
# GOOGLE_APPLICATION_CREDENTIALS=config/google_vision_credentials.json

# ===== RISK ASSESSMENT =====

# DTI thresholds (Debt-to-Income ratio)
DTI_LOW_THRESHOLD=35        # < 35% = Low risk
DTI_HIGH_THRESHOLD=50       # > 50% = High risk

# ===== APPLICATION =====

# Flask config
FLASK_ENV=production
DEBUG=False

